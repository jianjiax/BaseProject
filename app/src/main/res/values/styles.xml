<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/wholeColor</item>
        <item name="android:colorBackground">@color/bgColor</item>
    </style>


    <style name="text_normal_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_normal</item>
    </style>

    <style name="text_normal_whole">
        <item name="android:textColor">@color/wholeColor</item>
        <item name="android:textSize">@dimen/txt_normal</item>
    </style>

    <style name="text_small_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="text_large_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_large</item>
    </style>

    <style name="text_medium_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="text_large_whole">
        <item name="android:textColor">@color/wholeColor</item>
        <item name="android:textSize">@dimen/txt_large</item>
    </style>

    <style name="text_xlarge_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_large</item>
    </style>

    <style name="paddingLeftAndRightNormal">
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
    </style>

    <style name="marginLeftAndRightThirty">
        <item name="android:layout_marginLeft">@dimen/px30</item>
        <item name="android:layout_marginRight">@dimen/px30</item>
    </style>

    <style name="paddingLeftAndRightThirty">
        <item name="android:layout_marginLeft">@dimen/padding_normal</item>
        <item name="android:layout_marginRight">@dimen/padding_normal</item>
    </style>
</resources>
